<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="com.nguyen.paul.thanh.walletmovie.fragments.MovieCastDetailsFragment">

    <ImageView
        android:id="@+id/movie_cast_profile"
        android:layout_width="0dp"
        android:layout_height="320dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_image_placeholder_white"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/movie_cast_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/colorPrimaryText"
        android:textStyle="normal|bold"
        android:textAlignment="textStart"
        android:gravity="start"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/movie_cast_profile"
        app:layout_constraintRight_toRightOf="@+id/movie_cast_profile"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/movie_cast_profile"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/movie_cast_birthday_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/movie_cast_birthday_text"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintLeft_toLeftOf="@+id/movie_cast_name"
        app:layout_constraintTop_toBottomOf="@+id/movie_cast_name"
        android:textStyle="normal|bold"
        android:gravity="start"
        android:textAlignment="textStart"/>

    <TextView
        android:id="@+id/movie_cast_birthday_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintBaseline_toBaselineOf="@+id/movie_cast_birthday_text"
        app:layout_constraintLeft_toRightOf="@+id/movie_cast_birthday_text"
        android:textStyle="normal|italic"
        android:gravity="start"
        android:textAlignment="textStart"/>

    <TextView
        android:id="@+id/movie_cast_birth_place_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/movie_cast_birth_place_text"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintLeft_toLeftOf="@+id/movie_cast_birthday_text"
        app:layout_constraintTop_toBottomOf="@+id/movie_cast_birthday_text"
        android:textStyle="normal|bold"
        android:gravity="start"
        android:textAlignment="textStart"/>

    <TextView
        android:id="@+id/movie_cast_birth_place_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintRight_toRightOf="@+id/movie_cast_profile"
        app:layout_constraintTop_toBottomOf="@+id/movie_cast_birth_place_text"
        android:textAlignment="textStart"
        android:gravity="start"
        android:textStyle="normal|italic"
        app:layout_constraintLeft_toLeftOf="@+id/movie_cast_birth_place_text"
        app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
        android:id="@+id/movie_cast_biography"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintLeft_toLeftOf="@+id/movie_cast_birth_place_value"
        app:layout_constraintTop_toBottomOf="@+id/movie_cast_birth_place_value"
        android:gravity="start"
        android:textAlignment="textStart"
        app:layout_constraintRight_toRightOf="@+id/movie_cast_birth_place_value"/>

        <Button
            android:text="@string/check_out_movies_for_cast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movies_for_this_cast_btn"
            app:layout_constraintTop_toBottomOf="@+id/movie_cast_biography"
            app:layout_constraintRight_toRightOf="@+id/movie_cast_biography"
            app:layout_constraintLeft_toLeftOf="@+id/movie_cast_biography"
            android:layout_marginTop="24dp"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>