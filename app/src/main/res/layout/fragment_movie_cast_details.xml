<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="com.nguyen.paul.thanh.walletmovie.fragments.MovieCastDetailsFragment">

        <TextView
            android:id="@+id/movie_cast_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/colorPrimaryText"
            android:textStyle="normal|bold"
            android:textAlignment="textStart"
            android:gravity="start"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/movie_cast_birthday_text"
        android:layout_width="wrap_content"
        android:text="@string/movie_cast_birthday_text"
        android:textColor="@color/colorPrimaryText"
        android:textStyle="normal|bold"
        android:gravity="start"
        android:textAlignment="textStart"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/movie_cast_name"
        app:layout_constraintLeft_toLeftOf="@+id/movie_cast_name"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        android:id="@+id/movie_cast_birthday_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintBaseline_toBaselineOf="@+id/movie_cast_birthday_text"
        app:layout_constraintLeft_toRightOf="@+id/movie_cast_birthday_text"
        android:textStyle="normal|italic"
        android:gravity="start"
        android:textAlignment="textStart"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        android:id="@+id/movie_cast_birth_place_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movie_cast_birth_place_text"
        android:textColor="@color/colorPrimaryText"
        android:textStyle="normal|bold"
        android:gravity="start"
        android:textAlignment="textStart"
        android:fontFamily="sans-serif-condensed"
        app:layout_constraintLeft_toLeftOf="@+id/movie_cast_birthday_text"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/movie_cast_birthday_text"/>

    <TextView
        android:id="@+id/movie_cast_birth_place_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/colorPrimaryText"
        android:textAlignment="textStart"
        android:gravity="start"
        android:textStyle="normal|italic"
        android:fontFamily="sans-serif-condensed"
        app:layout_constraintBaseline_toBaselineOf="@+id/movie_cast_birth_place_text"
        app:layout_constraintLeft_toRightOf="@+id/movie_cast_birth_place_text"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"/>

        <TextView
            android:text="@string/cast_biography"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/bio_text"
            android:textColor="@color/colorPrimaryText"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"
            android:textAlignment="textStart"
            android:gravity="start"
            android:textStyle="normal|bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/movie_cast_birth_place_text"
            app:layout_constraintLeft_toLeftOf="@+id/movie_cast_birth_place_text"
            app:layout_constraintRight_toRightOf="@+id/movie_cast_name"/>

        <TextView
            android:id="@+id/movie_cast_biography"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/colorPrimaryText"
            android:gravity="start"
            android:textAlignment="textStart"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/bio_text"
            app:layout_constraintLeft_toLeftOf="@+id/bio_text"
            app:layout_constraintRight_toRightOf="@+id/movie_cast_name"/>

        <Button
            android:text="@string/check_out_movies_for_cast"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/movies_for_this_cast_btn"
            app:layout_constraintTop_toBottomOf="@+id/movie_cast_biography"
            app:layout_constraintRight_toRightOf="@+id/movie_cast_biography"
            app:layout_constraintLeft_toLeftOf="@+id/movie_cast_biography"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintVertical_bias="1.0"
            android:background="@drawable/rounded_shape"
            android:elevation="@dimen/cardview_elevation"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryText"
            android:layout_marginBottom="16dp"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>